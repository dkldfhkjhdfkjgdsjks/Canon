suck=suck
player=game.Players.LocalPlayer
c=Instance.new("HopperBin",player.Backpack)
script.Parent=c
local rays={}
c.Selected:connect(function(mm)
mm.Button1Down:connect(function()
cast=Ray.new(player.Character.Torso.CFrame.p,mm.Hit.p.unit*500)
hit,pos=Workspace:FindPartOnRay(cast,Workspace.CurrentCamera)
d=(pos - player.Character.Torso.CFrame.p).magnitude
x=Instance.new("Part",player.Character)
table.insert(rays,x)
x.CanCollide=false
x.Anchored=true
x.TopSurface=Enum.SurfaceType.Smooth
x.BottomSurface=Enum.SurfaceType.Smooth
x.formFactor=Enum.FormFactor.Custom
x.Size=Vector3.new(0.8,0.8,d)
x.CFrame=CFrame.new(pos,player.Character.Torso.CFrame.p) * CFrame.new(0,0,-d/2)
end)
mm.KeyDown:connect(function(key)
if key:lower()=="k" then
for i,v in pairs(rays) do
v:Destroy()
end
rays={}
elseif key:lower()=="m" then
for i,v in pairs(rays) do
v.CanCollide=false
end
elseif key:lower()=="n" then
for i,v in pairs(rays) do
v.CanCollide=true
end
end
end)
end)
